<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpiritRally"
        tools:targetApi="31">
        <activity
            android:name=".assets.IconError"
            android:exported="false"
            android:label="@string/title_activity_icon_error"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".useful.UsefulMethods"
            android:exported="false"
            android:label="@string/title_activity_useful_methods"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".screens.ProfileScreen"
            android:exported="false"
            android:label="@string/title_activity_profile_screen"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".screens.ResultScreen"
            android:exported="false"
            android:label="@string/title_activity_result_screen"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".screens.MapScreen"
            android:exported="false"
            android:label="@string/title_activity_map_screen"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".screens.MyBottomAppBar"
            android:exported="false"
            android:label="@string/title_activity_my_bottom_app_bar"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".assets.IconQRCode"
            android:exported="false"
            android:label="@string/title_activity_icon_qrcode"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".screens.NewsScreen"
            android:exported="false"
            android:label="@string/title_activity_news_screen"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".NewsScreen"
            android:exported="false"
            android:label="@string/title_activity_news_screen"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".data.UserViewModel"
            android:exported="false"
            android:label="@string/title_activity_user_view_model"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.SpiritRally" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SpiritRally">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="android:screenOrientation"/>
    </application>

</manifest>